---
import { Image } from 'astro:assets'

import Layout from '../layouts/Layout.astro'
import Card from '../components/Card.astro'
import Hero from '../components/Hero.astro'
import Section from '../components/Section.astro'
import Button from '../components/Button.astro'
import MediaCard from '../components/MediaCard.tsx'

import iphone from '../assets/iphone.png'
import iphone2 from '../assets/iphone2.png'
import ipad from '../assets/ipad.png'

// Customized Cards
import Experience from '../components/cards/Experience.astro'
import Music from '../components/cards/Music.astro'
import TexasEx from '../components/cards/TexasEx.astro'
import Stats from '../components/cards/Stats.astro'
import Map from '../components/cards/Map.astro'
import Stack from '../components/cards/Stack.astro'
import Socials from '../components/cards/Socials.astro'
import CardInsert from '../components/CardInsert.astro'
---

<Layout title="Joseph Risk" navText="index">
	<Hero />
	<Section title="Latest Projects" href="/projects">
		<div class="relative flex h-60 w-full justify-end">
			<Card
				className="flex h-full w-3/4 flex-row justify-end border-lime-400 bg-lime-200 p-0 dark:border-lime-400"
			>
				<div class="flex h-full w-2/3 flex-col justify-center gap-2 px-8">
					<h3 class="text-2xl font-bold text-black">Dossi AI</h3>
					<p class="text-lime-900">
						Next.js RAG application Next.js RAG application Next.js RAG application
					</p>
					<Button
						className="border border-lime-600 bg-lime-500 text-base font-semibold text-white dark:bg-lime-500"
						href="/projects/dossi-ai"
					>
						More Info
					</Button>
				</div>
			</Card>
			<Card className="absolute left-0 top-0 h-full w-[50%] bg-white p-4 pb-0 dark:bg-black">
				<CardInsert>
					<div
						class="relative mt-4 flex h-[calc(100%+16px)] w-full flex-shrink-0 justify-between gap-6 px-4"
					>
						<Image
							src={ipad}
							alt="Cellularr"
							class="h-full w-full object-cover object-top transition-all duration-300 ease-in-out hover:-translate-y-4 hover:cursor-pointer"
						/>
					</div>
				</CardInsert>
			</Card>
		</div>
		<div class="relative h-80 w-full">
			<Card className="h-full w-1/2 border-sky-400 bg-sky-200 p-0 dark:border-sky-400">
				<div class="flex h-full w-[60%] flex-col justify-center gap-2 px-8">
					<h3 class="text-2xl font-bold text-black">Cellularr</h3>
					<p class="text-sky-900">
						Next.js RAG application Next.js RAG application Next.js RAG application
					</p>
					<Button
						className="border border-sky-600 bg-sky-500 text-base font-semibold text-white dark:bg-sky-500"
						href="/projects/cellularr"
					>
						More Info
					</Button>
				</div>
			</Card>
			<Card className="c absolute right-0 top-0 h-full w-[70%] bg-white p-4 pb-0 dark:bg-black">
				<CardInsert>
					<div
						class="relative mt-4 flex h-[calc(100%+16px)] w-full flex-shrink-0 justify-between gap-6 px-4"
					>
						<Image
							src={iphone2}
							alt="Cellularr"
							class="h-full w-full object-cover object-top transition-all duration-300 ease-in-out hover:-translate-y-4 hover:cursor-pointer"
						/>
						<Image
							src={iphone}
							alt="Cellularr"
							class="h-full w-full object-cover object-top transition-all duration-300 ease-in-out hover:-translate-y-4 hover:cursor-pointer"
						/>

						<div
							class="absolute bottom-0 hidden h-1/6 w-full bg-gradient-to-t from-sky-200 to-transparent"
						>
						</div>
					</div>
				</CardInsert>
			</Card>
		</div>
	</Section>
	<Section title="About Me">
		<div class="grid grid-cols-2 gap-4 md:grid-cols-3">
			<TexasEx />
			<Stats />
			<Map />
		</div>
		<div class="flex flex-col gap-4 md:flex-row">
			<div class="flex flex-col gap-4 md:w-[58%]">
				<Experience />
				<Music />
				<div class="hidden md:flex">
					<Socials />
				</div>
			</div>
			<Stack />
			<div class="flex md:hidden">
				<Socials />
			</div>
		</div>
	</Section>
</Layout>
