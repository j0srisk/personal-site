---
interface Props {
	title?: string
	href?: string
}

const { title, href } = Astro.props
---

<section class="flex w-full flex-col gap-4">
	{
		(title || href) && (
			<div class="flex w-full justify-between">
				{title && <h1 class="text-lg font-bold">{title}</h1>}
				{href && (
					<a href={href} class="group flex items-center gap-1 text-sm">
						<p>View all</p>
						<svg
							xmlns="http://www.w3.org/2000/svg"
							viewBox="0 0 16 16"
							fill="currentColor"
							class="h-4 w-4 transition-all duration-300 ease-in-out  group-hover:translate-x-0.5"
						>
							<path
								fill-rule="evenodd"
								d="M2 8a.75.75 0 0 1 .75-.75h8.69L8.22 4.03a.75.75 0 0 1 1.06-1.06l4.5 4.5a.75.75 0 0 1 0 1.06l-4.5 4.5a.75.75 0 0 1-1.06-1.06l3.22-3.22H2.75A.75.75 0 0 1 2 8Z"
								clip-rule="evenodd"
							/>
						</svg>
					</a>
				)}
			</div>
		)
	}
	<slot />
</section>
