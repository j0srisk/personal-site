---
import { twMerge } from 'tailwind-merge'

interface Props {
	text?: string
	href: string
	className?: string
}

const { href, text, className } = Astro.props
---

<button
	class={twMerge(
		'flex h-full w-fit px-4 items-center justify-center overflow-hidden rounded-lg bg-slate-50 text-xs font-bold',
		className
	)}
>
	<a href={href} class="flex w-fit items-center justify-center">
		{text && <h2 class="">{text}</h2>}
		<slot />
	</a>
</button>
