---
import { twMerge } from 'tailwind-merge'

interface Props {
	text?: string
	href: string
	className?: string
}

const { href, text, className } = Astro.props
---

<button
	class={twMerge(
		'bg-card text-card-foreground flex h-full items-center justify-center overflow-hidden rounded-lg bg-slate-50 text-xs font-bold',
		className
	)}
>
	<a href={href} class="flex w-fit items-center justify-center">
		{text && <h2 class="p-4">{text}</h2>}
		<slot />
	</a>
</button>
