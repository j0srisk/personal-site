---
import { Image } from 'astro:assets'

import Card from './Card.astro'
import Tag from './Tag.astro'

// somehow import type
const { project } = Astro.props
---

<a href={'/projects/' + project.slug} class="group flex flex-col items-center gap-2">
	<Card className="h-full p-2 dark:bg-neutral-900">
		<div class="aspect-video overflow-hidden">
			<Image
				src={project.data.image}
				alt={project.data.name}
				class="h-full w-full rounded-[8px] object-cover object-top"
			/>
		</div>
	</Card>

	<div class="flex w-full flex-col items-start justify-start gap-1">
		<p class="font-semibold">
			{project.data.name}
		</p>
		{
			project.data.tags && (
				<div class="flex flex-wrap gap-1">
					{project.data.tags.map((tag: any) => (
						<Tag text={tag} />
					))}
				</div>
			)
		}
	</div>
</a>
