---
import { Image } from 'astro:assets'

import Card from './Card.astro'

// somehow import type
const { project } = Astro.props
---

<a href={'/projects/' + project.slug} class="group flex flex-col items-center gap-2">
	<Card className="h-full p-2">
		<div class="aspect-video overflow-hidden rounded-2xl">
			<Image
				src={project.data.image}
				alt={project.data.name}
				class="h-full w-full object-cover object-top"
			/>
		</div>
	</Card>

	<div class="flex w-full flex-col items-start justify-start gap-1">
		<p class="font-semibold">
			{project.data.name}
		</p>
		{
			project.data.tags && (
				<div class="flex flex-wrap gap-1">
					{project.data.tags.map((tag: any) => (
						<span class="rounded-sm bg-gray-100 px-1 py-0.5 text-xs font-semibold text-gray-500">
							{tag}
						</span>
					))}
				</div>
			)
		}
	</div>
</a>
