---
import Card from '../Card.astro'
import CardInsert from '../CardInsert.astro'
import Job from '../Job.astro'
import neutrino from '../../assets/neutrino.png'
import markel from '../../assets/markel.jpg'
import frontier from '../../assets/frontier.png'
---

<Card className="flex-shrink-0 pb-0" title="Experience">
	<CardInsert>
		<Job
			image={neutrino}
			postion="Freelance Web Developer"
			company="Neutrino Web Development"
			duration="2017 - 2023"
		/>
		<Job
			image={markel}
			postion="Underwriting Intern"
			company="Markel Corporation"
			duration="Summer 2022"
		/>
		<Job
			image={frontier}
			postion="Founding Partner"
			company="Frontier Extraction"
			duration="2020 - 2022"
		/>
	</CardInsert>
</Card>
