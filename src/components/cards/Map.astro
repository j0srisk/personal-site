---
import Card from '../Card.astro'
import Mapbox from '../Mapbox.tsx'
---

<Card className="aspect-square p-0">
	<div class="relative flex h-full w-full flex-col justify-end">
		<Mapbox client:only="react" />
		<div
			class="absolute bottom-0 right-0 rounded-tl-lg border border-b-0 border-r-0 border-neutral-300 bg-white py-1 pl-3 pr-4 shadow"
		>
			<p class="text-xs font-semibold text-black">Current Location</p>
		</div>
	</div>
</Card>
