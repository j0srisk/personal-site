---
interface Props {
	title?: string
	href?: string
	class?: string
}

const { title, href } = Astro.props
---

<div
	class:list={[
		'border-1 w-full overflow-hidden rounded-3xl border border-neutral-300 shadow-inner',
		Astro.props.class
	]}
>
	{title && <h3 class="mb-4 text-base font-bold">{title}</h3>}
	<slot />
</div>
