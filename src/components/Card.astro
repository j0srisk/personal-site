---
interface Props {
	title?: string
	href?: string
	class?: string
}

const { title, href } = Astro.props
---

<div
	class:list={[
		Astro.props.class,
		'h-full w-full rounded-2xl border border-zinc-800 p-4 text-white shadow-sm'
	]}
>
	{title && <h3 class="mb-4 text-base font-bold">{title}</h3>}
	<slot />
</div>
