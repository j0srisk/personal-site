---
import { twMerge } from 'tailwind-merge'

interface Props {
	title?: string
	href?: string
	className?: string
}

const { title, href, className } = Astro.props
---

<div
	class={twMerge(
		'border-1 p-4 w-full overflow-hidden rounded-3xl border border-neutral-300 shadow-inner',
		className
	)}
>
	{title && <h3 class="mb-4 pl-2 text-sm font-semibold">{title}</h3>}
	<slot />
</div>
